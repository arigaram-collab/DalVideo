<Window x:Class="DalVideo.Views.RegionSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#40000000"
        Topmost="True"
        Cursor="Cross"
        ShowInTaskbar="False">
    <Grid>
        <!-- Preset bar at top -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top"
                    Margin="0,20,0,0">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#CC1E1E2E"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#44FFFFFF"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="Margin" Value="4,0"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bd" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bd" Property="Background" Value="#DD3E3E5C"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="bd" Property="Background" Value="#EE505070"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="프리셋:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"
                       FontSize="14">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <Button Content="1920 x 1080" Click="OnPresetClick" Tag="1920,1080"/>
            <Button Content="1280 x 720" Click="OnPresetClick" Tag="1280,720"/>
            <Button Content="854 x 480" Click="OnPresetClick" Tag="854,480"/>
            <TextBlock Text="  |  드래그: 직접 선택  |  ESC: 취소"
                       Foreground="#99FFFFFF" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="12"/>
        </StackPanel>

        <!-- Selection canvas -->
        <Canvas x:Name="SelectionCanvas">
            <Rectangle x:Name="SelectionRect"
                       Stroke="Red" StrokeThickness="2"
                       Fill="#2000FF00"
                       Visibility="Collapsed"/>
            <TextBlock x:Name="SizeLabel"
                       Foreground="White" FontSize="14"
                       Background="#80000000" Padding="4,2"
                       Visibility="Collapsed"/>
        </Canvas>
    </Grid>
</Window>
